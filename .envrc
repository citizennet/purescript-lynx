set -euo pipefail

use_nix() {
    local cache=.direnv.cache
    if [[ ! -e "${cache}" || \
              "${HOME}/.direnvrc" -nt "${cache}" || \
              .envrc -nt "${cache}" || \
              default.nix -nt "${cache}" \
        ]]; then
        local tmp="$(mktemp "${cache}.tmp-XXXXXXXX")"
        trap "rm -rf ${tmp}" EXIT

        nix-shell --show-trace "$@" --run 'direnv dump' > "${tmp}"
        mv "${tmp}" "${cache}"
    fi

    if direnv_load cat "${cache}"; then
        watch_file default.nix
    fi
}

use_nix
